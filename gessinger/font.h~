#ifndef _GESSINGER_FONT_H
#define _GESSINGER_FONT_H

#define _GNU_SOURCE
#include <glib.h>
#include <glib-object.h>

G_BEGIN_DECLS
#define GESSINGER_FONT_TYPE                  (gessinger_font_get_type ())
#define GESSINGER_FONT(obj)                  (G_TYPE_CHECK_INSTANCE_CAST ((obj), GESSINGER_FONT_TYPE, GessingerFont))
#define GESSINGER_FONT_CLASS(klass)          (G_TYPE_CHECK_CLASS_CAST ((klass), GESSINGER_FONT_TYPE, GessingerFontClass))
#define IS_GESSINGER_FONT(obj)               (G_TYPE_CHECK_INSTANCE_TYPE ((obj), GESSINGER_FONT_TYPE))
#define IS_GESSINGER_FONT_CLASS(klass)       (G_TYPE_CHECK_CLASS_TYPE ((klass), GESSINGER_FONT_TYPE))
#define GESSINGER_FONT_GET_CLASS(obj)        (G_TYPE_INSTANCE_GET_CLASS ((obj), GESSINGER_FONT_TYPE, GessingerFontClass))

typedef struct _GessingerFont GessingerFont;
typedef struct _GessingerFontClass GessingerFontClass;

struct _GessingerFont
{
  /*< private >*/
  GObject parent;
};

struct _GessingerFontClass
{
  /*< private >*/
  GObjectClass parent;
};

GType gessinger_font_get_type (void) G_GNUC_CONST;
GessingerFont *gessinger_font_new (void);

G_END_DECLS

#endif /* _GESSINGER_FONT_H */
